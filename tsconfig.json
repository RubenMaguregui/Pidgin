{
  "version": "1.7.3",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src/",
    "target": "ES6",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "noResolve": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "experimentalAsyncFunctions": true
  },
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}